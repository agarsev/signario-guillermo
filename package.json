{
  "name": "guillermo",
  "version": "0.4.0",
  "description": "Guillermo: aplicación de gestión de la BD del Signario",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps"
  },
  "targets": {
    "table": {
      "source": "src/table/index.html",
      "publicUrl": "./",
      "distDir": "dist/table"
    },
    "detail": {
      "source": "src/detail/index.html",
      "publicUrl": "./",
      "distDir": "dist/detail"
    }
  },
  "author": "Antonio F. G. Sevilla <afgs@ucm.es>",
  "license": "OSL-3.0",
  "dependencies": {
    "better-sqlite3": "^7.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "electron": "^18.3.11",
    "electron-builder": "^23.1.0",
    "parcel": "^2.6.2",
    "postcss": "^8.4.14",
    "postcss-nesting": "^10.1.10",
    "tailwindcss": "^3.1.4"
  },
  "build": {
    "appId": "com.garciasevilla.guillermo",
    "files": [
      "dist/*/*.html",
      "dist/*/*.js",
      "dist/*/*.css",
      "src/*.js",
      "src/*/back.js"
    ],
    "win": {
      "target": "portable"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
